{
  "name": "backend-api",
  "version": "1.0.0",
  "description": "Humanitarian SMS Wallet application!",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "test:base": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test": "npm run test:base",
    "test:cache": "npm run test:base -- --clearCache",
    "test:handles": "npm run test:base -- --detectOpenHandles --watch",
    "test:e2e": "npm run test:base -- --config jest.config.e2e.js",
    "test:watch": "npm run test:base -- --watch",
    "test:coverage": "npm run test:base -- --collectCoverage true --coverageReporters html text-summary --coverageDirectory coverage",
    "test:ci": "npm run test:base -- --collectCoverage true --coverageReporters lcov text-summary --coverageDirectory coverage",
    "build": "npx tsc",
    "start": "npx tsx dist/index.js",
    "dev": "NODE_OPTIONS=\"--loader ts-node/esm\" nodemon src/index.ts"
  },
  "author": "Xcapit",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@stellar/typescript-wallet-sdk": "^1.9.0",
    "@xcapit/shelter-sdk": "file:../sdk",
    "@stellar/stellar-sdk": "^13.3.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-prom-bundle": "^8.0.0",
    "i18next": "^24.2.0",
    "i18next-fs-backend": "^2.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.4",
    "prom-client": "^15.1.3",
    "randomstring": "^1.3.0",
    "shamir-secret-sharing": "^0.0.3",
    "twilio": "^5.0.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.11",
    "@types/randomstring": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
